<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layoutStatus"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@android:color/background_light">

        <RelativeLayout
            android:id="@+id/layoutStatusHeader"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@android:color/darker_gray">

            <TextView
                android:id="@+id/textStatusHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Status" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/textStatusMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentStart="true"
                android:text="Notification listener service" />

            <TextView
                android:id="@+id/textStatusSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textStatusMain"
                android:text="Disabled" />

            <Switch
                android:id="@+id/switchService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="On"
                android:textOff="Off"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="onClickSwitchService" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onTestNotificationClick"
                android:text="Test notification" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutApplications"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@android:color/background_light">

        <RelativeLayout
            android:id="@+id/layoutApplicationsHeader"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@android:color/darker_gray">

            <TextView
                android:id="@+id/textApplicationsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Applications" />

            <ImageButton
                android:id="@+id/imageButtonApplicationsNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_new"
                android:onClick="onClickApplicationsNew"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <GridView
                android:id="@+id/gridSelectedApplications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="auto_fit"
                android:columnWidth="72dp"
                android:horizontalSpacing="4dp"
                android:verticalSpacing="4dp"
                android:stretchMode="none" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>